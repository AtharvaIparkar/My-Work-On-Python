def atharva(a,b):
    return a-b
print(atharva(20,10))

def sq(a):
    sq=[]
    for i in a:
        sq.append(i**2)
    return sq
a=[1,2,3]
print(sq(a))
print("squares of the list are : ",sq(a))

def a(n1,n2=70):
    print(n1)
    print(n2)
a(30)
a(40,50)

# Create a function to check if no. less than 10 or not
def a(b):
    if b<10:
        print("less than 10")
    else:
        print("more than 10")
a(9)


