#To check whether a num is even or odd using class
class Even_odd:
    def get_num(self,n):
        self.n=n
    def cal(self):
        if self.n%2==0:
            print("even")
        else:
            print("odd")
E1=Even_odd()
E1.get_num(10)
E1.cal()


#Student details by using class
class Student:
    def get_detail(self,n,a,e):
        self.n=n
        self.a=a
        self.e=e
    def show_details(self):
        print("name",self.n)
        print("age",self.a)
        print("address",self.e)
S1=Student()
S1.get_detail("jayesh","18","ZCOER")
S1.show_details()


#Student details by class by taking input from user
name=input("")
age=int(input(""))
address=input("")
class Student:
    def get_detail(self,n,a,e):
        self.n=n
        self.a=a
        self.e=e
    def show_details(self):
        print("name",self.n)
        print("age",self.a)
        print("address",self.e)
S1=Student()
S1.get_detail(name,age,address)
S1.show_details()


#Check odd or even num upto n term using class
class Even_odd:
    def get_num(self,n):
        self.n=n
    def cal(self):
        for i in range(0,self.n):
            if i%2==0:
                print("even=",i)
            else:
                print("odd=",i)
e1=Even_odd()
e1.get_num(20)
e1.cal()


#Consructor
class Employee:
    def __init__ (self,name,age,salary,gender):
        self.name=name
        self.age=age
        self.salary=salary
        self.gender=gender
    def employee_details(self):
        print("Name of employee :",self.name)
        print("Age of employee :",self.age)
        print("Salary of enployee :",self.salary)
        print("Gender of employee",self.gender)
e1=Employee ("rahul",21,40000,"male")
e1.employee_details()


# Single Inheritance
class Vehicle:
    def __init__(self,mileage,cost):
        self.mileage=mileage
        self.cost=cost
    def show_details(self):
        print("I am a Vehicle")
        print("Mileage of vehicle is :",self.mileage)
        print("Cost of vehicle is :",self.cost)
v1=Vehicle(12,500000)
v1.show_details()

class car(Vehicle):
    def show_car(self):
        print("I am a car")
c1=car(10,300000)
c1.show_car()
c1.show_details()

